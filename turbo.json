{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["**/*.ts", "**/tsconfig.json", "**/package*.json", "packages/**/*.ts"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["**/*.test.ts", "**/*.spec.ts"]
    },
    "lint": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "start": {
      "inputs": ["dist/**"],
      "dependsOn": ["^build", "build"]
    }
  },
  "globalDependencies": [
    "shared/**/*.ts",
    "./tsconfig.base.json",
    ".eslintignore",
    ".eslintrc.js",
    ".prettierrc",
    "./package.json"
  ]
}
