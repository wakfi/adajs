{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": [],
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["**/*.test.ts", "**/*.spec.ts"]
    },
    "lint": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": ["shared/**/*.ts", "./tsconfig.json", ".eslint.js", ".prettierrc"]
}
