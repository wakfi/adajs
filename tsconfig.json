{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2022",
    "outDir": "dist",
    "lib": ["esnext"],
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "incremental": true
  },
  "include": ["packages/**/*.ts", "packages/**/*.cjs"],
  "exclude": ["node_modules", "dist"]
}
