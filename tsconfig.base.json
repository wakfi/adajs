{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "isolatedModules": false
    }
  },
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "outDir": "dist",
    "lib": ["esnext"],
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "paths": {
      "shared/*": ["shared/*"],
      "@ada/*": ["packages/ada/*"],
      "@config/*": ["packages/config/*"]
    }
  },
  "files": ["types.d.ts", "shared/modules/esm-tools/index.d.ts"],
  "exclude": ["node_modules", "dist", "build.mjs"]
}
